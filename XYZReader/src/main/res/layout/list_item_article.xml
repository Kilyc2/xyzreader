<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_height"
    android:orientation="horizontal"
    android:paddingTop="@dimen/item_list_padding_top"
    android:paddingLeft="@dimen/border_padding"
    android:paddingStart="@dimen/border_padding">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/item_list_img_length"
        android:layout_height="@dimen/item_list_img_length"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/border_padding"
        android:paddingStart="@dimen/border_padding"
        android:paddingRight="@dimen/border_padding"
        android:paddingEnd="@dimen/border_padding"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_list_size_title"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_list_size_subtitle"/>

    </LinearLayout>

</LinearLayout>
